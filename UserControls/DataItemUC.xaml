<UserControl x:Class="DiagramDesigner.UserControls.DataItemUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiagramDesigner.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="550">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <ListBox x:Name="List" Width="120" HorizontalAlignment="Left" ItemsSource="{Binding dataSourceModels}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding }" CommandParameter="{Binding ElementName=List}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Width="100" Height="30">
                            <Label Content="{Binding DBType}" HorizontalAlignment="Left"></Label>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Margin="10 0 0 0">
                <StackPanel Orientation="Horizontal">
                    <Label Content="别名："></Label>
                    <TextBox Width="150" Text="{Binding Path=SelectedDataSourceModel.DBAlias}"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0 15 0 0">
                    <Label Content="SQL："></Label>
                    <TextBox Width="370" Height="100" Text="{Binding SelectedDataSourceModel.DataItems[0].SqlStr}"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="100 10 0 0">
                    <Button Content="测试" Margin="20 0 0 0"></Button>
                    <Button Content="执行" Margin="20 0 0 0"></Button>
                    <Button Content="删除" Margin="20 0 0 0"></Button>
                    <Button Content="保存" Margin="20 0 0 0"></Button>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
