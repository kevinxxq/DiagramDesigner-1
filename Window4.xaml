                        <Grid.RowDefinitions>
                            <RowDefinition Height="100"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Canvas Grid.Row="0">

                            <Label Content="SQL:" Canvas.Left="78" Canvas.Top="18"/>
                            <TextBox Width="390" Canvas.Left="123" Canvas.Top="18" Height="47" TextWrapping="Wrap" ></TextBox>
                            <Button Content="执行Sql" Canvas.Left="573" Canvas.Top="18"  Width="66"/>
                            <Button Content="保存" Canvas.Left="573" Canvas.Top="53" Width="66"/>
                        </Canvas>

                    </Grid>

                </ScrollViewer>
            </TabItem>
            <TabItem Header="My Sql">
                <ScrollViewer VerticalScrollBarVisibility="Auto">

                </ScrollViewer>
            </TabItem>
            <TabItem Header="品牌">
                <ScrollViewer VerticalScrollBarVisibility="Auto">

                </ScrollViewer>
            </TabItem>
        </TabControl>
    </StackPanel>

</Window>
